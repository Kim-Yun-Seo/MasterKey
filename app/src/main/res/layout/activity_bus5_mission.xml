<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bus5_mission"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC24D"
        android:elevation="4dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="0dp">
        <!-- 왼쪽 버튼 -->
        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:contentDescription="Left Button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/back" />
        <!-- 중앙 텍스트 -->
        <TextView
            android:id="@+id/tvCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="시외버스터미널"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/home_toolbar"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:contentDescription="Right Button" />
    </Toolbar>

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/busseat"
            android:layout_width="wrap_content"
            android:layout_height="516dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/seatselect"></ImageView>

        <ImageView
            android:id="@+id/soldseat"
            android:layout_width="50dp"
            android:layout_height="300dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="220dp"
            app:srcCompat="@drawable/soldseat" />

        <ImageView
            android:id="@+id/soldseat_1"
            android:layout_width="50dp"
            android:layout_height="136dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/soldseat_1" />

        <ImageView
            android:id="@+id/seat"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="170dp"
            app:srcCompat="@drawable/seat3" />

        <ImageView
            android:id="@+id/seat1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="230dp"
            app:srcCompat="@drawable/seat_bus" />

        <ImageView
            android:id="@+id/seat2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="230dp"
            app:srcCompat="@drawable/seat_bus" />
        <ImageView
            android:id="@+id/seat3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="290dp"
            app:srcCompat="@drawable/seat_bus" />
        <ImageView
            android:id="@+id/seat4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="290dp"
            app:srcCompat="@drawable/seat_bus" />
        <ImageView
            android:id="@+id/seat5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="350dp"
            app:srcCompat="@drawable/seat_bus" />
        <ImageView
            android:id="@+id/seat6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="350dp"
            app:srcCompat="@drawable/seat_bus" />
        <ImageView
            android:id="@+id/seat7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="410dp"
            app:srcCompat="@drawable/seat_bus" />
        <ImageView
            android:id="@+id/seat8"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="410dp"
            app:srcCompat="@drawable/seat_bus" />

        <TextView
            android:id="@+id/departue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:text="광주 유스퀘어 "
            android:textSize="15dp"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            app:srcCompat="@drawable/arrow_bus" />

        <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="서울센트럴시티"
            android:layout_marginRight="30dp"
            android:layout_marginTop="80dp"/>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="82dp"
            android:layout_gravity="right"
            android:layout_marginTop="230dp"
            android:layout_marginRight="30dp"
            app:srcCompat="@drawable/arrow2_bus" />

        <TextView
            android:id="@+id/totalpay"
            android:layout_width="150dp"
            android:layout_height="58dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp">

            <Button
                android:id="@+id/adult"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#FFC24D"
                android:text="어른"
                android:textSize="16dp" />

            <Button
                android:id="@+id/junior"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#FFC24D"
                android:text="어린이/청소년"
                android:textSize="16dp" />


            <Button
                android:id="@+id/bohoon"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#FFC24D"
                android:text="보훈"
                android:textSize="16dp" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:text="취소"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFC24D"
        android:orientation="horizontal"
        android:gravity="top|center">

        <ImageView
            android:id="@+id/home"
            android:layout_width="64dp"
            android:layout_height="49dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:contentDescription="Right Button"
            android:gravity="center|top"
            android:src="@drawable/home_toolbar" />

        <Button
            android:id="@+id/backbus"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FFE28B"
            android:text="이전으로"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/nextbus"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FFE28B"
            android:text="결제하기"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>