<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Bus4">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="#FFC24D"
        android:elevation="4dp">
        <!-- 왼쪽 버튼 -->
        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:src="@drawable/back"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:contentDescription="Left Button" />
        <!-- 중앙 텍스트 -->
        <TextView
            android:id="@+id/tvCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="시외버스터미널"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_gravity="end"
            android:src="@drawable/home"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:contentDescription="Right Button" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/calender" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출발 일"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnyesbus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#CACACA"
                android:text="이전날"
                android:textSize="20dp"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="2023.12.24"
                android:textSize="30dp"></TextView>

            <Button
                android:id="@+id/btnnebus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#CACACA"
                android:text="다음날"
                android:textSize="20dp"></Button>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="407dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/timetable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bustimetable" />

        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="18dp"
            android:layout_height="31dp"
            android:layout_gravity="right"
            android:layout_marginTop="95dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/busarrow3" />

        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="18dp"
            android:layout_height="31dp"
            android:layout_gravity="right"
            android:layout_marginTop="140dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/busarrow3" />

        <ImageView
            android:id="@+id/arrow3"
            android:layout_width="18dp"
            android:layout_height="31dp"
            android:layout_gravity="right"
            android:layout_marginTop="183dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/busarrow3" />

        <ImageView
            android:id="@+id/arrow4"
            android:layout_width="18dp"
            android:layout_height="31dp"
            android:layout_gravity="right"
            android:layout_marginTop="225dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/busarrow3" />

        <ImageView
            android:id="@+id/arrow5"
            android:layout_width="18dp"
            android:layout_height="31dp"
            android:layout_gravity="right"
            android:layout_marginTop="265dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/busarrow3" />



    </FrameLayout>
</LinearLayout>