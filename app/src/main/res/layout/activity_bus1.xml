<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFC107"
    android:orientation="vertical"
    tools:context=".Bus1">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC24D"
        android:elevation="4dp">
        <!-- 왼쪽 버튼 -->

        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:contentDescription="Left Button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/back" />
        <!-- 중앙 텍스트 -->

        <TextView
            android:id="@+id/tvCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="시외버스터미널"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/home_toolbar"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:contentDescription="Right Button" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="503dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bus1"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:backgroundTint="#FF9800"
            android:src="#FF9800"
            android:textStyle="bold"
            android:text="승차권 구매"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bus2"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:backgroundTint="#FF9800"
            android:src="#FF9800"
            android:textStyle="bold"
            android:text="예매한 승차권"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bus3"
            android:layout_width="318dp"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:backgroundTint="#FF9800"
            android:src="#FF9800"
            android:textStyle="bold"
            android:text="승차권 환불"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:gravity="center|top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/korbus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:backgroundTint="#FFC107"
            android:text="한국어"
            android:textSize="20dp" />

        <Button
            android:id="@+id/engbus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#FFC107"
            android:src="#FFC24D"
            android:text="ENG"
            android:textSize="20dp" />

        <Button
            android:id="@+id/chibus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#FFC107"

            android:text="中國語"
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>
