<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center"
      android:background="#FFC24D"
      tools:context=".Bus_missionmode">

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="40dp"
        android:background="@drawable/rec_bus" />

  <ImageView
      android:layout_width="133dp"
      android:layout_height="138dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="80dp"
      android:src="@drawable/challenge_bus" />

    <ImageView
        android:id="@+id/btn_mission_start"
        android:layout_width="198dp"
        android:layout_height="63dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="470dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/mission_start" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="135dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="550dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/mission_home" />

</FrameLayout>
