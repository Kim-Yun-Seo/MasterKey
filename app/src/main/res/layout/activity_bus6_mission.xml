<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bus6_mission"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC24D"
        android:elevation="4dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="0dp">
        <!-- 왼쪽 버튼 -->
        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:contentDescription="Left Button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/back" />
        <!-- 중앙 텍스트 -->
        <TextView
            android:id="@+id/tvCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="시외버스터미널"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_gravity="end"
            android:contentDescription="Right Button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/home"/>
    </Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/bus6_1"
            android:layout_width="312dp"
            android:layout_height="221dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bus6_1" />

        <TextView
            android:id="@+id/datebus6_1"
            android:layout_width="176dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="2023.12.21(목)"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/depbus6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="55dp"
            android:gravity="center|left"
            android:text="출발지 : 광주 유스퀘어"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/desbus6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="115dp"
            android:gravity="center|left"
            android:text="도착지 :"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/realdes"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="112dp"
            android:gravity="center|left"
            android:text="서울 센트럴 시티" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="30dp"
            android:text="버스회사 : 버스등급 : 좌석번호 : 티켓수량 : "
            android:textSize="10dp" />

        <TextView
            android:id="@+id/buscompany"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="30dp"
            android:text="금호고속"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/bugrade"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="45dp"
            android:text="일반"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/seatnum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="60dp"
            android:text="D6,D7"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/ticketnum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="75dp"
            android:text="2매"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="77dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="165dp"
            android:text="17,000원"
            android:textSize="20dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bus6_2"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            app:srcCompat="@drawable/bus6_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#FFC24D"
            android:gravity="top|center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/home"
                android:layout_width="64dp"
                android:layout_height="49dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:contentDescription="Right Button"
                android:gravity="center|top"
                android:layout_margin="20dp"
                android:src="@drawable/home" />

            <Button
                android:id="@+id/request"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#FFE28B"
                android:layout_margin="20dp"
                android:text="결제취소"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>