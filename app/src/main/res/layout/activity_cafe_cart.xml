<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cafe_cart">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="#FFC24D"
        android:elevation="4dp"
        >

        <!-- 왼쪽 버튼 -->
        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:src="@drawable/back"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:contentDescription="Left Button" />

        <!-- 중앙 텍스트 -->
        <TextView
            android:id="@+id/tvCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="이디야"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_centerHorizontal="true" />

        <!-- 오른쪽 버튼 -->
        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_gravity="end"
            android:src="@drawable/home"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:contentDescription="Right Button" />


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvDescription_cafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="EDIYA COFFEE"
        android:background="#3A4EFF"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <!-- 버튼 그리드 -->
    <GridLayout
        android:id="@+id/gridLayoutButtons_cafe"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:columnCount="4"
        android:rowCount="2"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <!-- 버튼 1 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1_cafe"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="COFFEE"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

        <!-- 버튼 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2_cafe"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="베버리지"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

        <!-- 버튼 3 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3_cafe"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="블렌딩 티"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

        <!-- 버튼 4 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4_cafe"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="에이드"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

        <!-- 버튼 5 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5_cafe"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="쉐이크,아포가토"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

        <!-- 버튼 6 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6_cafe"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="플랫치노"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

        <!-- 버튼 7 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7_cafe"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="버블 밀크티"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

        <!-- 버튼 8 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8_cafe"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="베이커리"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

    </GridLayout>
    <ImageView
        android:id="@+id/firstMenu_cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:background="@drawable/blackborder_cafe"
        android:src="@drawable/ame_change_cafe" />

    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="130dp"
        android:textStyle="bold"
        android:padding="20dp"
        android:text="(L) ICED 아메리카노                 ₩3200"/>

    <ImageView
        android:id="@+id/secondMenu_cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:background="@drawable/blackborder_cafe"
        android:src="@drawable/change_peanut_cafe" />

    <TextView
        android:id="@+id/text9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="130dp"
        android:textStyle="bold"
        android:padding="20dp"
        android:text="(L) ICED 토피넛라떼                 ₩3200"/>


    <ImageView
        android:id="@+id/cafe_box1"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ame_change_cafe" />
    <ImageView
        android:id="@+id/cafe_box2"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/change_peanut_cafe" />


    <ImageView
        android:id="@+id/cafe_box3"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/cafe_box" />


    <TextView
        android:id="@+id/payAmount_cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="260dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="₩7400"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/cancel_button_cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="260dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="전체취소"
        android:textColor="#001AFF" />


    <ImageView
        android:id="@+id/payBtn"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="320dp"
        android:layout_marginBottom="15dp"
        android:padding="20px"
        android:scaleType="fitCenter"
        android:src="@drawable/cart_pay_cafe" />

</RelativeLayout>


