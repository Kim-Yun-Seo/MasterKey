<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity_practicemode">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="#FFC24D"
        android:elevation="4dp"
        >

        <!-- 왼쪽 버튼 -->
        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:src="@drawable/left_arrow_cgv"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:contentDescription="Left Button" />

        <!-- 오른쪽 버튼 -->
        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_gravity="end"
            android:src="@drawable/icon_home_cgv"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:contentDescription="Right Button" />
    </androidx.appcompat.widget.Toolbar>


    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/main_3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="연습(실전)모드입니다"
            android:textColor="#FF7A00"
            android:layout_margin="2dp"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="어떤 걸 연습(실전) 하시나요?"
            android:textColor="#FF7A00"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/IB_main_3_cafe"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="onImageButtonClick"
            android:src="@drawable/main_3_cafe" />

        <ImageButton
            android:id="@+id/IB_main_3_bus"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="onImageButtonClick"
            android:src="@drawable/main_3_bus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/IB_main_3_cgv"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="onImageButtonClick"
            android:src="@drawable/main_3_cgv" />

        <ImageButton
            android:id="@+id/IB_main_3_hospital"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="onImageButtonClick"
            android:src="@drawable/main_3_hospital" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/main_3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="*아직 특정 프랜차이즈만 있는 점 양해부탁드립니다."
            android:textColor="#FF7A00"
            android:layout_margin="2dp"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>