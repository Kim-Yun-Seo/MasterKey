<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity_second">

    <ImageView
        android:id="@+id/main_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/masterkey_icon" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/main_2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마스터 키"
            android:textColor="#FFC24D"
            android:textSize="45dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="모두를 위한 키오스크 연습 어플"
            android:textColor="#A66300"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <Button
            android:id="@+id/main_2_4"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:background="@drawable/round_button_cgv"
            android:backgroundTint="#FFC24D"
            android:text="연습하기"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="28dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/main_2_5"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:background="@drawable/round_button_cgv"
            android:backgroundTint="#FFC24D"
            android:text="도전하기"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>